<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/lbl_dis_nurseId"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="ID"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/lbl_nurse_name"
            app:layout_constraintTop_toBottomOf="@+id/lbl_nurse_name" />

        <TextView
            android:id="@+id/lbl_nurse_name"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:text="Name"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lbl_nurse_status"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="Status"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/lbl_dis_nurseId"
            app:layout_constraintTop_toBottomOf="@+id/lbl_dis_nurseId" />

        <TextView
            android:id="@+id/lbl_result_nurse_name"
            android:layout_width="191dp"
            android:layout_height="35dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="16dp"
            android:text="TextView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lbl_result_nurse_id"
            android:layout_width="193dp"
            android:layout_height="35dp"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="0dp"
            android:text="TextView"
            app:layout_constraintLeft_toLeftOf="@+id/lbl_result_nurse_name"
            app:layout_constraintTop_toBottomOf="@+id/lbl_result_nurse_name"
            tools:layout_editor_absoluteX="227dp" />

        <TextView
            android:id="@+id/lbl_result_nurse_status"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="0dp"
            android:text="TextView"
            app:layout_constraintLeft_toLeftOf="@+id/lbl_result_nurse_id"
            app:layout_constraintTop_toBottomOf="@+id/lbl_result_nurse_id"
            tools:layout_editor_absoluteX="230dp" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>
