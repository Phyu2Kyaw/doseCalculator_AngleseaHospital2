<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dosecalculator.dosecalculator_angleseahospital.ManagePatientsActivity">

    <TextView
        android:id="@+id/lbl_patient_Id"
        android:layout_width="314dp"
        android:layout_height="34dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:text="Patient Details"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="32dp"
        app:layout_constraintHorizontal_bias="0.921" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ficon_add_patient"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:layout_marginStart="60dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/plus_icon"
        android:layout_marginLeft="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ficon_update_patient"
        android:layout_marginEnd="43dp"
        app:layout_constraintBottom_toBottomOf="@+id/ficon_update_patient"
        app:layout_constraintTop_toTopOf="@+id/ficon_update_patient"
        app:layout_constraintVertical_bias="0.0" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ficon_update_patient"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/update_icon"
        app:layout_constraintBottom_toBottomOf="@+id/ficon_add_patient"
        app:layout_constraintTop_toTopOf="@+id/ficon_add_patient"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintRight_toRightOf="@+id/ficon_add_patient" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ficon_delete_patient"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/delete_icon"
        app:layout_constraintHorizontal_bias="0.757"
        app:layout_constraintBottom_toBottomOf="@+id/ficon_update_patient"
        app:layout_constraintTop_toTopOf="@+id/ficon_update_patient"
        app:layout_constraintRight_toRightOf="@+id/ficon_update_patient" />

    <EditText
        android:id="@+id/txt_patient_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ficon_update_patient" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="10dp"
        android:text="Patients"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_patient_id"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

    <ListView
        android:id="@+id/lv_patients"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="21dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</android.support.constraint.ConstraintLayout>
