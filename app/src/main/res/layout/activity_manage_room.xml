<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dosecalculator.dosecalculator_angleseahospital.ManageRoomsActivity">

    <EditText
        android:id="@+id/txt_room_name"
        android:layout_width="300dp"
        android:layout_height="46dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lbl_Employee" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/icon_room_add"
        android:layout_width="77dp"
        android:layout_height="73dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/plus_icon_room"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="49dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/icon_update"
        android:layout_width="73dp"
        android:layout_height="74dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/update_icon"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="49dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/icon_room_add"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.262" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/icon_delete"
        android:layout_width="71dp"
        android:layout_height="77dp"
        android:layout_marginTop="49dp"
        android:clickable="true"
        app:fabSize="mini"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/delete_icon"
        app:layout_constraintLeft_toRightOf="@+id/icon_update"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.517" />

    <TextView
        android:id="@+id/lblRoomName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="34dp"
        android:text="Name"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_room_name" />

    <TextView
        android:id="@+id/lbl_Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="136dp"
        android:layout_marginTop="34dp"
        android:text="Status"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_room_name" />

    <TextView
        android:id="@+id/lbl_Employee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="42dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/icon_room_add" />

    <ListView
        android:id="@+id/lst_view_room"
        android:layout_width="302dp"
        android:layout_height="206dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="49dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="12dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_Status" />

</android.support.constraint.ConstraintLayout>
