<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/ficon_update_patients"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="24dp"
            android:clickable="true"
            app:fabSize="mini"
            app:layout_constraintLeft_toRightOf="@+id/ficon_add_patients"
            app:layout_constraintTop_toBottomOf="@+id/lbl_patients_title"
            app:srcCompat="@drawable/update_icon" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/ficon_add_patients"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="24dp"
            android:clickable="true"
            app:fabSize="mini"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_patients_title"
            app:srcCompat="@drawable/plus_icon_room" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/ficon_delete_patients"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:clickable="true"
            app:fabSize="mini"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_patients_title"
            app:srcCompat="@drawable/delete_icon"
            app:layout_constraintLeft_toRightOf="@+id/ficon_update_patients"
            android:layout_marginLeft="32dp" />

        <TextView
            android:id="@+id/lbl_patients_title"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginEnd="24dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="24dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="26dp"
            android:text="Manage Patients"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ListView
            android:isScrollContainer="false"
            android:id="@+id/lv_patient"
            android:layout_width="0dp"
            android:layout_height="258dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_patient_names" />

        <EditText
            android:id="@+id/txt_patient_names"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="19dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ficon_update_patients"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>